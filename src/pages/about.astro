---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/gallery/outdoor-signs/Channel Letters/about_banner.jpeg";
import storyImage from "../assets/images/carousel/c1.jpeg";
import { PHONE_HREF } from "../consts";
---

<Layout title="About Us - Universal Advertiser">
    <Header />

    <main class="pt-16">
        <!-- Hero (split) -->
        <section
            class="relative bg-gradient-to-br from-indigo-800 to-purple-600 text-white"
        >
            <div
                class="max-w-7xl mx-auto px-6 py-20 grid gap-10 md:grid-cols-2 items-center"
            >
                <div>
                    <h1
                        class="text-4xl md:text-5xl font-extrabold tracking-tight"
                    >
                        Creative branding & outdoor advertising
                    </h1>
                    <p class="mt-4 text-lg opacity-90 max-w-xl">
                        Since 2003 we've combined craftsmanship, modern
                        materials and a global partner network to deliver
                        high-impact signage and advertising solutions that work.
                    </p>

                    <div class="mt-8 grid grid-cols-3 gap-4 max-w-sm">
                        <div class="bg-white/10 p-4 rounded-lg text-center">
                            <div class="text-2xl font-semibold">10+</div>
                            <div class="text-sm opacity-90">Years</div>
                        </div>
                        <div class="bg-white/10 p-4 rounded-lg text-center">
                            <div class="text-2xl font-semibold">500+</div>
                            <div class="text-sm opacity-90">Projects</div>
                        </div>
                        <div class="bg-white/10 p-4 rounded-lg text-center">
                            <div class="text-2xl font-semibold">100%</div>
                            <div class="text-sm opacity-90">Satisfaction</div>
                        </div>
                    </div>
                </div>

                <div class="relative">
                    <div class="rounded-2xl overflow-hidden shadow-2xl">
                        <Image
                            src={heroImage}
                            alt="Our team working on signage"
                            class="w-full h-full object-cover"
                        />
                    </div>
                    <div
                        class="absolute -bottom-6 -left-6 bg-white/90 backdrop-blur-md p-4 rounded-lg shadow-md border hidden sm:block"
                    >
                        <div class="text-sm text-gray-700 font-medium">
                            Serving businesses since 2003
                        </div>
                        <div class="text-xs text-gray-500">
                            Design → Manufacture → Install
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Our Story Section (keeps original image/text pairing but refined) -->
        <section class="py-16 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex flex-col md:flex-row items-center gap-12">
                    <div class="md:w-1/2">
                        <div class="rounded-xl overflow-hidden shadow-lg">
                            <Image
                                src={storyImage}
                                alt="Our Story"
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>
                    <div class="md:w-1/2">
                        <h2 class="text-3xl font-semibold text-indigo-700 mb-4">
                            About Universal (Since 2003)
                        </h2>
                        <p class="text-lg text-gray-600 mb-6">
                            With the latest technologies and a wide range of
                            available materials, there really is no end of
                            choice and quality in the manufacturing of Universal
                            Advertiser & Printers. We combine creative strategy
                            with technical execution to deliver durable,
                            high-visibility signage.
                        </p>

                        <ul class="space-y-3">
                            <li class="flex items-start gap-3">
                                <div
                                    class="h-9 w-9 rounded-full bg-indigo-100 text-indigo-700 flex items-center justify-center font-medium"
                                >
                                    ✓
                                </div>
                                <div class="text-gray-700">
                                    End-to-end service: concept, manufacture,
                                    installation
                                </div>
                            </li>
                            <li class="flex items-start gap-3">
                                <div
                                    class="h-9 w-9 rounded-full bg-purple-100 text-purple-700 flex items-center justify-center font-medium"
                                >
                                    ✓
                                </div>
                                <div class="text-gray-700">
                                    Custom materials and finishes for every
                                    project
                                </div>
                            </li>
                            <li class="flex items-start gap-3">
                                <div
                                    class="h-9 w-9 rounded-full bg-pink-100 text-pink-700 flex items-center justify-center font-medium"
                                >
                                    ✓
                                </div>
                                <div class="text-gray-700">
                                    Nationwide/networked installation partners
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services / Features (card layout but more compact) -->
        <section class="py-12 bg-gray-50">
            <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div
                        class="bg-white p-6 rounded-lg shadow hover:shadow-md transition"
                    >
                        <div class="text-indigo-600 font-semibold text-lg">
                            Consulting
                        </div>
                        <p class="mt-2 text-sm text-gray-600">
                            Strategy and messaging to make your signage
                            effective.
                        </p>
                    </div>

                    <div
                        class="bg-white p-6 rounded-lg shadow hover:shadow-md transition"
                    >
                        <div class="text-purple-600 font-semibold text-lg">
                            Design & Install
                        </div>
                        <p class="mt-2 text-sm text-gray-600">
                            From approval drawings to on-site installation.
                        </p>
                    </div>

                    <div
                        class="bg-white p-6 rounded-lg shadow hover:shadow-md transition"
                    >
                        <div class="text-pink-600 font-semibold text-lg">
                            Supply Chain
                        </div>
                        <p class="mt-2 text-sm text-gray-600">
                            Global partners and bulk procurement for larger
                            projects.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Mission & Vision -->
        <section class="py-16">
            <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 gap-8">
                <div
                    class="p-8 bg-gradient-to-br from-indigo-600 to-indigo-700 text-white rounded-xl shadow"
                >
                    <h3 class="text-2xl font-semibold">Our Mission</h3>
                    <p class="mt-4 text-indigo-100">
                        To empower businesses with innovative and impactful
                        advertising solutions that drive growth and visibility.
                        We strive to deliver excellence in every project.
                    </p>
                </div>

                <div
                    class="p-8 bg-gradient-to-br from-purple-600 to-pink-600 text-white rounded-xl shadow"
                >
                    <h3 class="text-2xl font-semibold">Our Vision</h3>
                    <p class="mt-4 text-purple-100">
                        To be the most trusted and creative advertising agency
                        in the region, known for our quality, reliability, and
                        customer-centric approach.
                    </p>
                </div>
            </div>
        </section>

        <!-- CTA (kept concise) -->
        <section class="py-12 bg-indigo-50">
            <div class="max-w-4xl mx-auto px-6 text-center">
                <h4 class="text-2xl font-semibold">
                    Ready to transform your brand?
                </h4>
                <p class="mt-2 text-gray-600">
                    Contact our team for a free consultation and site survey.
                </p>
                <div class="mt-6 flex justify-center gap-4">
                    <a
                        href={PHONE_HREF}
                        class="inline-block px-6 py-3 border border-indigo-200 rounded-lg"
                        >Call Us</a
                    >
                </div>
            </div>
        </section>
    </main>

    <Footer />
    <WhatsAppButton />
</Layout>
