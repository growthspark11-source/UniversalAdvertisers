---
import { PHONE_NUMBER, PHONE_HREF } from "../consts";
const currentYear = new Date().getFullYear();
const sitemap = [
    { name: "Home", href: import.meta.env.BASE_URL },
    { name: "About", href: import.meta.env.BASE_URL + "about" },
    { name: "Services", href: import.meta.env.BASE_URL + "services" },
    { name: "Contact", href: import.meta.env.BASE_URL + "contact" },
];
---

<footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
            <!-- Brand & Copyright -->
            <div>
                <h3 class="text-2xl font-normal text-white mb-4">
                    Universal Advertiser
                </h3>

                <!-- Contact Info with Icons -->
                <div class="space-y-3 mb-4">
                    <!-- Phone Numbers -->
                    <div class="flex items-center gap-2 text-gray-400">
                        <svg
                            class="w-5 h-5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        <div class="text-sm">
                            <a
                                href={PHONE_HREF}
                                class="hover:text-white transition-colors"
                                >{PHONE_NUMBER}</a
                            >
                            <span class="mx-1">|</span>
                            <a
                                href="tel:+919315338025"
                                class="hover:text-white transition-colors"
                                >+91 93153 38025</a
                            >
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-center gap-2 text-gray-400">
                        <svg
                            class="w-5 h-5 flex-shrink-0"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <a
                            href="mailto:universal.advertiser1@gmail.com"
                            class="text-sm hover:text-white transition-colors"
                        >
                            universal.advertiser1@gmail.com
                        </a>
                    </div>
                </div>

                <p class="text-gray-400 text-sm mb-4">
                    &copy; {currentYear} All rights reserved.
                </p>
                <p class="text-gray-500 text-xs">
                    Designed and Developed with passion.
                </p>
            </div>

            <!-- Sitemap -->
            <div>
                <h3 class="text-lg font-normal text-white mb-4">Sitemap</h3>
                <ul class="space-y-2">
                    {
                        sitemap.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-gray-400 hover:text-white transition-colors duration-200"
                                >
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Contact Info -->
            <div>
                <h3 class="text-lg font-normal text-white mb-4">Contact Us</h3>
                <div class="space-y-4 text-sm text-gray-400">
                    <div>
                        <h4 class="text-white font-normal mb-1">
                            Kurukshetra Office
                        </h4>
                        <p>
                            Office No. 3, Krishna Market, Behind Sector 7 Petrol
                            Pump, Kurukshetra, Haryana
                        </p>
                    </div>
                    <div>
                        <h4 class="text-white font-normal mb-1">
                            Yamunanagar Office
                        </h4>
                        <p>
                            Basement, Kamla Market, Near Telephone Exchange,
                            Yamunanagar, Haryana
                        </p>
                    </div>
                </div>
            </div>

            <!-- Credits -->
            <div class="md:text-left">
                <h3 class="text-lg font-normal text-white mb-4">Credits</h3>
                <p class="text-gray-400">
                    Made by <a
                        href="https://www.technove24.com"
                        class="text-indigo-400 hover:text-indigo-300 transition-colors duration-200"
                        >Technove24</a
                    >
                </p>
            </div>
        </div>
    </div>
</footer>
