const branches = [
    {
        name: "Kurukshetra Office",
        address:
            "Office No. 3, Krishna Market, Behind Sector 7 Petrol Pump, Kurukshetra, Haryana",
        phone: "+91 94665 07637, 9315338025",
        email: "universal.advertiser1@gmail.com",
    },
    {
        name: "Yamunanagar Office",
        address:
            "Basement, Kamla Market, Near Telephone Exchange, Yamunanagar, Haryana",
        phone: "+91 94665 07637, 9315338025",
        email: "universal.advertiser1@gmail.com",
    },
];

const socialLinks = [
    {
        name: "Facebook",
        url: "https://www.facebook.com/profile.php?id=100006240396642",
        icon: "M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z",
    },
    {
        name: "Instagram",
        url: "#",
        icon: "M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01M22 12c0 5.523-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2s10 4.477 10 10zm-2 0a8 8 0 10-16 0 8 8 0 0016 0z",
    },
];
---

<section class="py-16 bg-gray-50" id="contact">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-12">
            <!-- Left Side: Contact Info -->
            <div class="lg:w-1/3 space-y-8">
                <div>
                    <h2
                        class="text-4xl font-normal text-gray-900 tracking-tight mb-4"
                    >
                        Contact Us
                    </h2>
                    <p class="text-lg text-gray-600">
                        We'd love to hear from you. Visit one of our branches or
                        get in touch via phone or email.
                    </p>
                    <div class="w-20 h-1 bg-indigo-600 mt-6"></div>
                </div>

                <div class="space-y-8">
                    {
                        branches.map((branch) => (
                            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
                                <h3 class="text-xl font-normal text-gray-900 mb-4">
                                    {branch.name}
                                </h3>
                                <div class="space-y-3 text-gray-600">
                                    <div class="flex items-start">
                                        <svg
                                            class="w-6 h-6 text-indigo-600 mt-1 mr-3 flex-shrink-0"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                            xmlns="http://www.w3.org/2000/svg"
                                        >
                                            <>
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                                />
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                                />
                                            </>
                                        </svg>
                                        <span>{branch.address}</span>
                                    </div>
                                    <div class="flex items-center">
                                        <svg
                                            class="w-6 h-6 text-indigo-600 mr-3 flex-shrink-0"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                            xmlns="http://www.w3.org/2000/svg"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                            />
                                        </svg>
                                        <span>{branch.email}</span>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>

                <div>
                    <h3 class="text-lg font-normal text-gray-900 mb-4">
                        Follow Us
                    </h3>
                    <div class="flex space-x-4">
                        {
                            socialLinks.map((link) => (
                                <a
                                    href={link.url}
                                    class="text-gray-400 hover:text-indigo-600 transition-colors duration-300"
                                    aria-label={link.name}
                                >
                                    <svg
                                        class="w-8 h-8"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <path d={link.icon} />
                                    </svg>
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>

            <!-- Right Side: Google Map -->
            <div
                class="lg:w-2/3 h-96 lg:h-auto min-h-[500px] bg-gray-200 rounded-lg overflow-hidden shadow-md relative"
            >
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3454.9876543210123!2d76.87184752361937!3d29.973102855707417!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjnCsDU4JzIzLjIiTiA3NsKwNTInMTguNyJF!5e0!3m2!1sen!2sin!4v1629794729807!5m2!1sen!2sin"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    class="absolute inset-0 w-full h-full"></iframe>
            </div>
        </div>
    </div>
</section>
