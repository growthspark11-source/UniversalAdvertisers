---

<section class="py-16 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8">
        <h2 class="text-3xl font-normal text-center text-gray-900">
            Our Clients
        </h2>
        <div class="w-20 h-1 bg-indigo-600 mx-auto mt-4"></div>
    </div>

    <div class="relative w-full">
        <div class="flex animate-scroll space-x-12 w-max">
            <!-- Original Set -->
            {
                clients.map((client) => (
                    <div class="client-card group flex-shrink-0 w-48 h-24 bg-white rounded-xl flex items-center justify-center p-4 shadow-md hover:shadow-2xl transition-all duration-500 border border-gray-200 hover:border-transparent overflow-hidden relative">
                        <div class="absolute inset-0 bg-gradient-to-br from-purple-500/0 via-pink-500/0 to-cyan-500/0 group-hover:from-purple-500/10 group-hover:via-pink-500/10 group-hover:to-cyan-500/10 transition-all duration-500" />
                        <img
                            src={client.src}
                            alt={client.alt}
                            class="max-w-full max-h-full object-contain relative z-10 transform group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>
                ))
            }
            <!-- Duplicate Set for Seamless Loop -->
            {
                clients.map((client) => (
                    <div class="client-card group flex-shrink-0 w-48 h-24 bg-white rounded-xl flex items-center justify-center p-4 shadow-md hover:shadow-2xl transition-all duration-500 border border-gray-200 hover:border-transparent overflow-hidden relative">
                        <div class="absolute inset-0 bg-gradient-to-br from-purple-500/0 via-pink-500/0 to-cyan-500/0 group-hover:from-purple-500/10 group-hover:via-pink-500/10 group-hover:to-cyan-500/10 transition-all duration-500" />
                        <img
                            src={client.src}
                            alt={`${client.alt} Duplicate`}
                            class="max-w-full max-h-full object-contain relative z-10 transform group-hover:scale-110 transition-transform duration-500"
                        />
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    .animate-scroll {
        animation: scroll 30s linear infinite;
    }

    .animate-scroll:hover {
        animation-play-state: paused;
    }
</style>
